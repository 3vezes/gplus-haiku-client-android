<resources>
    <color name="whitegrey">#FFFAFAFA</color>
    <color name="lightgrey">#FFD9D9D9</color>
    <color name="midgrey">#FFB9B9B9</color>
    <color name="darkgrey">#FF191919</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="green">#FF5D7523</color>
    <color name="palegreen">#FFADC573</color>
    <color name="orange">#FFD99A00</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="@android:windowBackground">@drawable/bg_japan</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="@android:windowBackground">@color/whitegrey</item>
        <item name="@android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Pane">
        <item name="@android:layout_margin">20dp</item>
        <item name="@android:background">@drawable/pane</item>
        <item name="@android:padding">20dp</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textScaleX">1.1</item>
    </style>

    <style name="AppTheme.Button.Auth" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="@android:background">@drawable/button_auth</item>
        <item name="@android:textColor">@color/white</item>
        <item name="@android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.Button.Action" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="@android:background">@drawable/button_action</item>
        <item name="@android:textColor">@color/white</item>
        <item name="@android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.Button.Cancel" parent="AppTheme.Button.Action">
        <item name="@android:background">@drawable/button_cancel</item>
        <item name="@android:textColor">@color/darkgrey</item>
    </style>

    <style name="AppTheme.Text.Label" parent="AppTheme.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
